#! /bin/sh
#
# Installation de paradigma et placement dans reperotire build de XCore
# 
# Par defaut dans : $CASSIOPEE/Dist/bin/$ELSAPROD/
# Sinon : dans le repertoire specifie en argument
#
if [ "$CASSIOPEE" = "" ]; then
        echo "You must specify a CASSIOPEE variable in you environment."
        echo "This variable specifies the installation path of *Cassiopee*."
        exit 1
fi
if [ "$ELSAPROD" = "" ]; then
    export ELSAPROD=x86_r8
fi

cmake . -DCMAKE_INSTALL_PREFIX="$CASSIOPEE/Apps/Modules/ThirdParty/paradigma/installdir/"
make
make install

cp "$CASSIOPEE/Apps/Modules/ThirdParty/paradigma/installdir/lib/libpdm.a" "$CASSIOPEE/Apps/Modules/XCore/build/$ELSAPROD/"

