#! /bin/sh
#
# Installation de RigidMotion
#
if ([ $# -eq 0 ])
then
    if [ "$CASSIOPEE" = "" ]; then
        echo "You must specify a CASSIOPEE variable in your environment."
        echo "This variable specifies the installation path of *Cassiopee*."
        exit 1
    fi
    if [ "$ELSAPROD" = "" ]; then
        export ELSAPROD=x86_r8
    fi
    INSTALLPATH="$CASSIOPEE/Dist/bin/$ELSAPROD"

elif ([ $# -eq 1 ])
then
    INSTALLPATH="$1"
else
    echo 'install: install in $CASSIOPEE/Dist/bin/$ELSAPROD'
    echo ' -or-'
    echo 'install <dir>: install in directory <dir>.'
    exit 1
fi

if [ "$PYTHONEXE" != "" ]; then
    alias python=$PYTHONEXE
fi

# Compilation et installation
sconsf=`which scons`
which scons &>/dev/null
if [ $? -eq 0 ]; then
    if [ "$OMP_NUM_THREADS" != "" ]; then
        export SCONSOPT="-j $OMP_NUM_THREADS"
    else
        export SCONSOPT=""
    fi
    python $sconsf install prefix="$INSTALLPATH" "$SCONSOPT"
    [ $? != 0 ] && exit 1;
    #touch RigidMotion/rigidMotion.cpp
    rm -f build/lib.*/RigidMotion/rigidMotion.*
    rm -f build/lib.*/RigidMotion/rigidMotion-*.*
    python setupScons.py install --prefix="$INSTALLPATH"
    [ $? != 0 ] && exit 1;
else
    python setup.py install --prefix="$INSTALLPATH"
    [ $? != 0 ] && exit 1;
fi

# Test l'installation
python test/t1.py
